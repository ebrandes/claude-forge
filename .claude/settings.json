{
  "permissions": {
    "allow": ["Bash(xargs:*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/check-ts.sh",
            "timeout": 30,
            "statusMessage": "Checking TypeScript..."
          }
        ]
      }
    ]
  }
}
